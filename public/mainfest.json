{
  "manifest_version": 3,
  "name": "LLM Agent Extension",
  "version": "0.1.0",
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "description": "An agent to interact with LLM chat sites.",
  "icons": {
    "16": "icons/icon16.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html", 
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}